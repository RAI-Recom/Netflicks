# Use a base Python image with DVC pre-installed
FROM python:3.10.12

# Create a non-root user
RUN useradd -ms /bin/bash dvcuser

# Set working directory
WORKDIR /workspace

# Install DVC (in case it's not in the base image)
RUN pip install --no-cache-dir dvc

# Switch to non-root user
USER dvcuser

# Default command (you can override it in the Jenkins pipeline)
CMD ["bash"]
